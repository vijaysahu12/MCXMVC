@*@model MCX.Models.Tables.Customers*@
@model MCX.Models.CustomModel.ServiceDetailsModel

@{
    ViewBag.Title = "Details";
}

<br />

<div class="row">
    <div class="col-lg-12" style="">
        @Html.AntiForgeryToken()

        <a href="/Customers" class="btn btn-default btn-sm col-md-offset-0" title="Back to List"><span class=" glyphicon glyphicon-backward" aria-hidden="true"></span></a>
        &nbsp;
        <a class="btn btn-default btn-sm" id="RecordEdit" title="Edit Customer Details" href="/Customers/Edit/@Model.Customers.CustomerID"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
        <a class="btn btn-primary  " title="As he is our potential customer you can start services for this user" href="/ServiceDetails/Create?CustomerID=@Model.Customers.CustomerID">Start Service for <strong>@Model.Customers.FirstName @Model.Customers.LastName</strong>.</a>
        <hr />
        <div class="row">
            <table class="col-lg-5">
                <tr>
                    <td colspan="2">
                        <div style="float:left;">
                            <h1> Mr. <em>@Html.DisplayFor(model => model.Customers.FirstName)   @Html.DisplayFor(model => model.Customers.LastName)</em></h1>
                        </div>
                        <div style="float:right; text-align:justify; vertical-align:text-bottom;"><p style="color:green;">Created on:- @Model.Customers.CreatedDate </p></div>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <table class="form-group" style="margin-left:0px;">
                            <tr>
                                <td class="text-info col-lg-6">
                                    @Html.DisplayNameFor(model => model.Customers.LeadOwner)

                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Customers.LeadOwner)
                                </td>
                            </tr>
                            <tr>
                                <td class="text-info col-lg-6">@Html.DisplayNameFor(model => model.Customers.Email)</td>
                                <td>:<strong>@Html.DisplayFor(model => model.Customers.Email)</strong></td>
                            </tr>
                            <tr>
                                <td class="text-info col-lg-6"> @Html.DisplayNameFor(model => model.Customers.Mobile)</td>
                                <td>:<strong>@Html.DisplayFor(model => model.Customers.Mobile)</strong></td>
                            </tr>
                            <tr>
                                <td class="text-info col-lg-6">@Html.DisplayNameFor(model => model.Customers.Address) </td>
                                <td>:<strong>@Html.DisplayFor(model => model.Customers.Address)</strong></td>
                            </tr>
                            <tr>
                                <td class="text-info col-lg-6">@Html.DisplayNameFor(model => model.Customers.CustomerType)</td>

                                @{
                                    var userTyp = Model.Customers.CustomerType == "L" ? "Lead" : "Potential";
                                }
                                <td>:<strong>@userTyp</strong></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>

        <div class="row col-lg-12">
            <div class="row col-lg-6">
                <h3><span>  Lead Information </span></h3>
                <div class="row col-lg-11">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>LeadOwner</td>
                                <td>@Model.Customers.LeadOwner</td>
                                <td>Title</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Lead Name</td>
                                <td>
                                    @Model.Customers.FirstName @Model.Customers.LastName
                                </td>
                                <td>Phone</td>
                                <td>@Model.Customers.Phone</td>
                            </tr>
                            <tr>
                                <td>Mobile</td>
                                <td>@Model.Customers.Mobile</td>
                                <td>Lead Source</td>
                                <td>@Model.Customers.LeadSource.SourceName</td>
                            </tr>
                            <tr>
                                <td>Website</td>
                                <td>@Model.Customers.Website</td>
                                <td>Prduct Name</td>
                                <td>@Model.Customers.Product.ProductName</td>
                            </tr>
                            <tr>
                                <td>Lead Status:</td>
                                <td>@Model.Customers.LeadStatu.LeadStatus</td>
                                <td>Investment:</td>
                                <td>@Model.Customers.Investmentid</td>
                            </tr>
                            <tr>
                                <td>Active</td>
                                <td>@Model.Customers.IsActive</td>
                                <td>Modified By</td>
                                <td>@Model.Customers.ModifiedBy</td>
                            </tr>
                            <tr>
                                <td>Created By:</td>
                                <td>@Model.Customers.CreatedBy</td>
                                <td></td>
                                <td></td>
                            </tr>

                        </tbody>

                    </table>
                </div>
            </div>

            <div class="row col-lg-6">
                <h3><span> Address Information</span></h3>
                <div class="row col-lg-11">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Address</td>
                                <td>@Model.Customers.Address</td>
                                <td>City</td>
                                <td>@Model.Customers.City</td>
                            </tr>
                            <tr>
                                <td>State</td>
                                <td></td>
                                <td>Country</td>
                                <td>India</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <h3><span>  Description Information </span></h3>
            <div class="row col-lg-12">
                <table class="table">
                    <tbody>
                        <tr>
                            <td class="col-lg-2">Description</td>
                            <td>@Model.Customers.Description</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <h3><span>  Stage History </span></h3>
            <div class="row col-lg-12">
                @*<table class="table">
                        <tbody>
                            <tr>
                                <td class="col-lg-2">Stage History</td>
                                <td>Stage History</td>
                            </tr>

                        </tbody>
                    </table>*@

                <table class="table">
                    <thead>
                        <tr>
                            <th>Potential Owner</th>
                            <th>Amount </th>
                            <th>Description</th>
                            <th>Service Type</th>
                            <th>ServiceStartDate</th>
                            <th>ServiceEndDate</th>
                        </tr>
                    </thead>

                    <tbody>


                        @foreach (var a in @Model.ServiceDetails)
                        {
                            <tr>
                                <td>@a.Users.Username</td>
                                <td>@a.Amount </td>
                                <td>@a.Description</td>
                                <td>@a.ServiceType</td>
                                <td>@a.ServiceStartDate</td>
                                <td>@a.ServiceEndDate</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<style>
    table tr td:first-child {
        background-color: #ecf8f8 !important;
    }


    table tr td:nth-child(2n+1) {
        background-color: #ecf8f8 !important;
    }

    table tr td:nth-child(2n+0) {
        background-color: #ebf2f2 !important;
    }

    table tr td:nth-child(2n+2) {
        background-color: #ebf2f2 !important;
    }
</style>