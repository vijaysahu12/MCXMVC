@model IEnumerable<MCX.Models.Tables.Customers>

@{
    ViewBag.Title = "Index";
}
<h2 class="sub-header">Potential Details</h2>

<table class="table table-responsive">
    <tr>
        <td colspan="7"></td>
        <td style="text-align:right;" colspan="1">
            <a class="btn btn-default btn-sm" id="RecordAdd" title="Add new Customer Details" href="/Customers/Create/"><span aria-hidden="true" class="glyphicon glyphicon-plus"></span></a>
            <a class="btn btn-default btn-sm" id="RecordEdit" title="Edit Customer Details" href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
            <a class="btn btn-default btn-sm" id="RecordDetail" title="View Customer Details" href="#"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
            <a class="btn btn-default btn-sm" id="RecordDelete" title="Delete Customer Details" href="#"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
            <a class="btn btn-default btn-sm" id="AssignedTo" title="Assigned to X Employees" href="#"><span class="glyphicon glyphicon-transfer" aria-hidden="true"></span></a>
        </td>
        <td colspan="0">
            <input type="text" id="searchFromGrid" onkeyup="javascript: ReBindGrid();" placeholder="search through name or mobile number" class="form-control form-inline" />
        </td>
    </tr>
    <tr>
        <th></th>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Source Name</th>
        <th>Lead Status</th>
        <th>Product Name</th>
        <th>Stage</th>
        <th width="1%">FollowUp</th>
        <th>@Html.DisplayNameFor(model => model.City)</th>
        @*<th>User Type</th>*@
        <th>Investment</th>
    </tr>
    <tbody id="gridBody">
        @foreach (var item in Model)
        {
            <tr id="@item.CustomerID">
                <td><input type="checkbox" />  </td>
                <td>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Mobile)</td>
                <td>@Html.DisplayFor(modelItem => item.LeadSource.SourceName)</td>
                <td>@Html.DisplayFor(modelItem => item.LeadStatu.LeadStatus)</td>
                <td>@Html.DisplayFor(modelItem => item.Product.ProductName)</td>
                <td>@Html.DisplayFor(modelItem => item.Stage.StageName)</td>
                <td>@Html.DisplayFor(modelItem => item.FollowUp)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                @*<th>@Html.DisplayFor(modelItem => item.CustomerType)</th>*@
                <td>@Html.DisplayFor(modelItem => item.Investmentid)</td>
            </tr>



        }
        @*   Total Records:-@Model.Count()*@
    </tbody>
</table>

