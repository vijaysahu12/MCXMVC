            <a class="btn btn-primary " title="Convert Lead to Potential and start service for @Model.FirstName @Model.LastName." href="/Customers/ConvertToPotential?CustomerID=@Model.CustomerID">Convert <strong>@Model.FirstName @Model.LastName </strong> to Potential Customer</a>
            }*@
        <hr />

        <div class="row">

            <table class="col-lg-12 ">
                <tr>

                    <td colspan="2">
                        <div style="float:left;">
                            <h1> Mr. <em>@Html.DisplayFor(model => model.FirstName)   @Html.DisplayFor(model => model.LastName)</em></h1>
                        </div>
                        <div style="float:right; text-align:justify; vertical-align:text-bottom;"><p style="color:green;">Created on:- @Model.CreatedDate </p></div>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <table class="form-group" style="margin-left:0px;">
                            <tr>
                                <td class="text-info col-lg-6">
                                    @Html.DisplayNameFor(model => model.LeadOwner)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.LeadOwner)
                                </td>
                            </tr>
                            <tr>
                                <td class="text-info col-lg-6">@Html.DisplayNameFor(model => model.Email)</td>
                                <td>:<strong>@Html.DisplayFor(model => model.Email)</strong></td>
                            </tr>
                            <tr>
                                <td class="text-info col-lg-6"> @Html.DisplayNameFor(model => model.Mobile)</td>
                                <td>:<strong>@Html.DisplayFor(model => model.Mobile)</strong></td>
                            </tr>

                            <tr>
                                <td class="text-info col-lg-6">@Html.DisplayNameFor(model => model.Address) </td>
                                <td>:<strong>@Html.DisplayFor(model => model.Address)</strong></td>
                            </tr>

                            <tr>
                                <td class="text-info col-lg-6">@Html.DisplayNameFor(model => model.CustomerType)</td>

                                @{
                                    var CustomerTy = Model.CustomerType == "L" ? "Lead" : "Potential";
                                }
                                <td>:<strong>@CustomerTy</strong></td>
                            </tr>


                            @*
                                <tr>
                                    <td class="text-info col-lg-6"></td>
                                    <td></td>
                                </tr>

                                <tr>
                                    <td class="text-info col-lg-6"></td>
                                    <td></td>
                                </tr>*@
                        </table>
                    </td>
                </tr>
            </table>
        </div>

        <div class="row col-lg-12">
            <div class="row col-lg-6">
                <h3><span>  Lead Information </span></h3>
                <div class="row col-lg-11">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>LeadOwner</td>
                                <td>@Model.LeadOwner</td>
                                <td>Title</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Lead Name</td>
                                <td>
                                    @Model.FirstName @Model.LastName
                                </td>
                                <td>Phone</td>
                                <td>@Model.Phone</td>
                            </tr>
                            <tr>
                                <td>Mobile</td>
                                <td>@Model.Mobile</td>
                                <td>Lead Source</td>
                                <td>@Model.LeadSource.SourceName</td>
                            </tr>
                            <tr>
                                <td>Website</td>
                                <td>@Model.Website</td>
                                <td>Prduct Name</td>
                                <td>@Model.Product.ProductName</td>
                            </tr>
                            <tr>
                                <td>Lead Status:</td>
                                <td>@Model.LeadStatu.LeadStatus</td>
                                <td>Investment:</td>
                                <td>@Model.Investmentid</td>
                            </tr>
                            <tr>
                                <td>Active</td>
                                <td>@Model.IsActive</td>
                                <td>Modified By</td>
                                <td>@Model.ModifiedBy</td>
                            </tr>
                            <tr>
                                <td>Created By:</td>
                                <td>@Model.CreatedBy</td>
                                <td></td>
                                <td></td>
                            </tr>

                        </tbody>

                    </table>
                </div>
            </div>

            <div class="row">
                <h3><span> Address Information</span></h3>
                <div class="row col-lg-6">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Address</td>
                                <td>@Model.Address</td>
                                <td>City</td>
                                <td>@Model.City</td>
                            </tr>
                            <tr>
                                <td>State</td>
                                <td></td>
                                <td>Country</td>
                                <td>India</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>



        <div class="row">
            <h3><span>  Description Information </span></h3>
            <div class="row col-lg-12">
                <table class="table">
                    <tbody>
                        <tr>
                            <td class="col-lg-2">Description</td>
                            <td>@Model.Description</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

