@model MCX.Models.Tables.Customers

@{
    ViewBag.Title = "Details";
}

<br />

<div class="row">
    <div class="col-lg-12" style="">
        @Html.AntiForgeryToken()

        <a href="/Customers" class="btn btn-default btn-sm col-md-offset-0" title="Back to List"><span class=" glyphicon glyphicon-backward" aria-hidden="true"></span></a>
        @*@Html.ActionLink("Edit", "Edit", new { id =  }, new { @class = "btn btn-primary" })*@ &nbsp;
        <a class="btn btn-default btn-sm" id="RecordEdit" title="Edit Customer Details" href="/Customers/Edit/@Model.CustomerID"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>

        @*@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary  col-md-offset-0" })*@

        <a class="btn btn-primary  " title="As he is our potential customer you can start services for this user" href="/PaymentDetails/Create?CustomerID=@Model.CustomerID">Start Service for <strong>@Model.FirstName @Model.LastName</strong>.</a>

        @* <a class="btn btn-primary" title="Give free trial to customer" href="/PaymentDetails/Create?CustomerID=@Model.CustomerID">Give 2 days trial to <strong>@Model.FirstName @Model.LastName </strong>.</a>*@

        @*@if (Model.UserType == "P")
            {
            <a class="btn btn-primary  " title="As he is our potential customer you can start services for this user" href="/PaymentDetails/Create?CustomerID=@Model.CustomerID">Start Service for  <strong>@Model.FirstName @Model.LastName </strong>.</a>
            }
            else
            {
